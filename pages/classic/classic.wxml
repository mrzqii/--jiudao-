<view class='container'>
  <view class='header'>
    <v-epsoide class="epsoide" index="{{classic.index}}"/>
    <v-like bind:like="onLike" like="{{likeStatus}}" class="like" count="{{likeCount}}"></v-like>
  </view>
  <v-movie hidden="{{classic.type!=100}}"  img="{{classic.image}}" content="{{classic.content}}" />
  <v-music src="{{classic.url}}" hidden="{{classic.type!=200}}"  img="{{classic.image}}" content="{{classic.content}}" />
  <v-essay hidden="{{classic.type!=300}}"  img="{{classic.image}}" content="{{classic.content}}" />
  <v-navi title="{{classic.title}}" 
          first="{{first}}" 
          latest="{{latest}}" 
          class="navi" 
          bind:left="onNext" 
          bind:right="onPrevious" />
</view>



